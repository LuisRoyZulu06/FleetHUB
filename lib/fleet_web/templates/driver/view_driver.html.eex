<main id="js-page-content" role="main" class="page-content">
    <div class="subheader">
        <h1 class="subheader-title">
            <i class='subheader-icon fal fa-user'></i> Profile
            <small>
                Profile layout
            </small>
        </h1>
    </div>

    <%= for list_driver <- [@list_drivers] do %> <!-- , list_vehicle <- [@list_vehicles] -->
    <div class="row">
        <div class="col-lg-6 col-xl-3 order-lg-1 order-xl-1">
            <!-- profile summary -->
            <div class="card mb-g rounded-top">
                <div class="row no-gutters row-grid">
                    <div class="col-12">
                        <div class="d-flex flex-column align-items-center justify-content-center p-4">

                            <%= if list_driver.sex == "M" do %>
                            <img class="rounded-circle shadow-2 img-thumbnail" alt="<%= list_driver.first_name%> <%= list_driver.last_name%>" src="<%= Routes.static_path(@conn, "/images/avatar/3.png") %>">
                            <% end %>

                            <%= if list_driver.sex == "F" do %>
                            <img class="rounded-circle shadow-2 img-thumbnail" alt="<%= list_driver.first_name%> <%= list_driver.last_name%>" src="<%= Routes.static_path(@conn, "/images/avatar/2.jpg") %>">
                            <% end %>

                            
                            <h5 class="mb-0 fw-700 text-center mt-3">
                                <%= list_driver.first_name%> <%= list_driver.last_name%>
                                <small class="text-muted mb-0"><%= list_driver.email%></small>
                            </h5>
                            <div class="mt-4 text-center demo">
                              <h5 class="text-muted mb-0"><%= list_driver.phone%></h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center py-3">
                            <h5 class="mb-0 fw-700">
                                Gender
                                <small class="text-muted mb-0"><%= list_driver.sex%></small>
                            </h5>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center py-3">
                            <h5 class="mb-0 fw-700">
                                Age
                                <small class="text-muted mb-0"><%= list_driver.age%></small>
                            </h5>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="p-3 text-center">
                            <a href="mailto:<%= list_driver.email%>?" class="btn-link font-weight-bold">Message</a> <span class="text-primary d-inline-block mx-3">&#9679;</span>
                            <a href="tel:<%= list_driver.phone%>" class="btn-link font-weight-bold">Call</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-12 col-xl-9 order-lg-3 order-xl-2">
            <!-- Details -->
            <div class="col-xl-12">
                <div id="panel-1" class="panel">
                    <div class="panel-hdr">
                        <h2>
                            Driver Details
                        </h2>
                    </div>

                    <div class="panel-container show">
                        <div class="panel-content">
                            <form action="<%= Routes.driver_path(@conn, :update_driver)%>" method="POST">
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="form-group">
                                            <label class="form-label">NRC Number</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fal fa-window-alt width-1 text-align-center"></i></span>
                                                </div>
                                                <input type="text" value="<%= list_driver.nrc_no %>"  class="form-control" disabled>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label">Home Address</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fal fa-home width-1 text-align-center"></i></span>
                                                </div>
                                                <input type="text" value="<%= list_driver.home_add %>"  class="form-control" disabled>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label">Drivers License Type</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fal fa-window-alt width-1 text-align-center"></i></span>
                                                </div>
                                                <input type="text" value="<%= list_driver.dlt %>"  class="form-control" disabled>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label">Drivers License Number</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fal fa-window-alt width-1 text-align-center"></i></span>
                                                </div>
                                                <input type="text" value="<%= list_driver.dln %>"  class="form-control" disabled>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label">Drivers License Expiry Date</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fal fa-window-alt width-1 text-align-center"></i></span>
                                                </div>
                                                <input type="text" value="<%= list_driver.dl_exp_dt %>"  class="form-control" disabled>
                                            </div>
                                        </div>

