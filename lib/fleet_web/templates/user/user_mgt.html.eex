<style>
    .license-class {display: "none";}
</style>
<main id="js-page-content" role="main" class="page-content">
    <div class="row">
        <div class="col-md-1"></div>

        <div class="col-md-10">
            <!---- FLASH -->
            <div class="row">
                <div class="col-md-12 col-lg-offset-2">
                    <div class="form-group">
                        <%= if get_flash(@conn, :info) do %>
                            <div class="alert alert-info alert-styled-left">
                            <button type="button" class="close" data-dismiss="alert">&times; <span class="sr-only">Close</span></button>
                            <%= get_flash(@conn, :info) %>
                            </div>
                        <% end %>
                        <%= if get_flash(@conn, :error) do %>
                            <div class="alert alert-danger alert-styled-left">
                            <button type="button" class="close" data-dismiss="alert">&times; <span class="sr-only">Close</span></button>
                            Opps! <%= get_flash(@conn, :error) %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
            
            <div class="subheader">
                <h1 class="subheader-title">
                    <i class='subheader-icon fal fa-user-circle'></i> User Management

                    <div class="panel-toolbar">
                        <button class="btn btn-outline-dark btn-sm btn-pills waves-effect waves-themed" data-toggle="modal" data-target="#createUser">
                            Create user
                        </button>
                    </div>
                </h1>

                <div class="info-card-text">
                    Logged In user:
                    <small>
                        <%= "#{(@conn.assigns.user.first_name)}"%> <%= "#{(@conn.assigns.user.last_name)}"%> | FleeHUB
                    </small>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12">
                    <div id="panel-1" class="panel">
                        <div class="panel-hdr">
                            <h2>
                                System users <i class='subheader-icon fal fa-user-circle'></i>
                            </h2>
                        </div>

                        <div class="panel-container show">
                            <div class="panel-content">
                                
                                <!-- datatable start -->
                                <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                                    <thead class="p-3 bg-fusion-50 rounded overflow-hidden position-relative text-white mb-g">
                                        <tr>
                                            <th>ID</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>User role</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%= for system_user <- @system_users do %>   
                                            <tr>
                                                <td><%= system_user.id %></td>
                                                <td><%= system_user.first_name %></td>
                                                <td><%= system_user.last_name %></td>
                                                <td><%= system_user.email %></td>
                                                <td><%= system_user.user_role %></td>
                                                <%= if system_user.account_status === "1" do %>
                                                    <td style="font-size: 14px; color: #00cc00;">Active</td>
                                                    <% else %>
                                                    <td style="font-size: 14px; color: #ff0000;">Deactivated</td>
                                                <% end %>
                                                <td>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                <button class="btn btn-sm btn-outline-dark btn-pills waves-effect waves-themed">
                                                                    Options
                                                                </button>
                                                            </span>
                                                            <div class="dropdown-menu">
                                                                <a class="dropdown-item" href="<%= Routes.user_path(@conn, :view_user_details, id: system_user.id)%>">
                                                                    <i class="fal fa-info"></i>
                                                                    Profile Details
                                                                </a>

                                                                <%= if system_user.account_status == "1" do %>
                                                                    <button type="button" class="dropdown-item" 
                                                                        data-id="<%= system_user.id %>" 
                                                                        data-first_name="<%= system_user.first_name %>" 
                                                                        data-last_name="<%= system_user.last_name %>" 
                                                                        data-sex="<%= system_user.sex %>" 
                                                                        data-phone="<%= system_user.phone %>" 
                                                                        data-email="<%= system_user.email %>" 
                                                                        data-drvrs_license_no="<%= system_user.drvrs_license_no %>" 
                                                                        data-drvrs_license_class="<%= system_user.drvrs_license_class %>" 
                                                                        data-drvrs_license_exp_dt="<%= system_user.drvrs_license_exp_dt %>" 
                                                                        data-user_type="<%= system_user.user_type %>" 
                                                                        data-user_role="<%= system_user.user_role %>" 
                                                                        data-toggle="modal" data-target="#editUser">
                                                                        <i class="fal fa-edit"></i>
                                                                        Edit
                                                                    </button> 
                                                                <% end %>

                                                                <%= if system_user.account_status === "1" do %>
                                                                    <a class="dropdown-item" 
                                                                        data-id="<%= system_user.id%>" 
                                                                        data-status="<%= system_user.account_status%>" 
                                                                        data-toggle="modal" 
                                                                        data-target="#deactivate_user">
                                                                        <i class="fal fa-ban"></i>
                                                                        Deactivate Account
                                                                    </a>
                                                                <% end %>

                                                                <%= if system_user.account_status != "1" do %>
                                                                    <a class="dropdown-item" 
                                                                        data-id="<%= system_user.id%>" 
                                                                        data-status="<%= system_user.account_status%>" 
                                                                        data-toggle="modal" 
                                                                        data-target="#activate_user">
                                                                        <i class="fal fa-check"></i>
                                                                        Activate Account
                                                                    </a>
                                                                <% end %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>   
                                        <% end %>   
                                    </tbody>                       
                                </table>
                                <!-- datatable end -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-1"></div>
    </div>
</main>

<!-- Create user -->
<div class="modal fade" id="createUser" tabindex="-1" role="dialog" aria-hidden="true" style="background-color: rgba(204, 204, 204, 0.8);">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add system user <i class='subheader-icon fal fa-user-circle'></i></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    Close window
                </button>
            </div>

            <div class="modal-body">
                <form class="form-horizontal" action="<%= Routes.user_path(@conn, :create_user)%>" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">First Name</label>
                                <div class="input-group">
                                    <input type="text" name="first_name" class="form-control" placeholder="First Name" required="required">
                                    <input type="hidden" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                                    <input type="hidden" name="auto_password" value="Y">
                                    <input type="hidden" name="account_status" value="1">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Phone</label>
                                <div class="input-group">
                                    <input type="text" name="phone" placeholder="Phone Number" value="+260" class="form-control" required="required">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Choose a user role</label>
                                <div class="input-group">
                                    <select id="slct-user-rol" class="custom-select form-control" name="user_role" required="required">
                                        <option value selected disabled>Select role</option>
                                        <option value="BACKOFFICE">ADMIN</option>
                                        <option value="DRIVER">DRIVER</option>
                                    </select>
                                </div>

                                <span class="help-block" style="display: none;">
                                    Selected user type is <input type="text" name="user_type" id="user_type" class="form-control form-control-lg rounded-0 border-bottom-0 border-top-0 border-left-0 border-right-0 px-0 help-block">
                                </span>
                            </div>

                            <div class="form-group">
                                <label class="form-label">ID Type</label>
                                <div class="input-group">
                                    <select id="idType" class="custom-select form-control" name="id_type" required="required">
                                        <option selected="">Select ID Type</option>
                                        <option value="NRC">NRC</option>
                                        <option value="Drivers License">Drivers License</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Last Name</label>
                                <div class="input-group">
                                    <input type="text" name="last_name" class="form-control" placeholder="Last Name" required="required">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Email</label>
                                <div class="input-group">
                                    <input type="text" name="email" placeholder="Email" data-inputmask="'alias': 'email'" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Gender</label>
                                <div class="input-group">
                                    <select class="custom-select form-control" name="sex" required="required">
                                        <option selected="">Select Gender</option>
                                        <option value="M">Male</option>
                                        <option value="F">Female</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group" id="license-class" style="display: none;">
                                <label class="form-label">Drivers License Category</label>
                                <div class="input-group">
                                    <select class="custom-select form-control" name="drvrs_license_class">
                                        <option selected="">Select Drivers License Class</option>
                                        <%= for licences <-@licences do %>
                                            <option value="<%= licences.name%>"><%= licences.name%></option>
                                        <% end %>
                                    </select>
                                </div>

                                <div class="input-group">
                                    <input type="text" name="drvrs_license_no" class="form-control" placeholder="Drivers License Number">
                                </div>

                                <div class="input-group">
                                    <input type="date" name="drvrs_license_exp_dt" class="form-control" placeholder="Drivers License Expiry Date">
                                </div>
                                <span class="help-block">
                                    Please enter the date of expiry for the drivers license.
                                </span>
                            </div>

                            <div class="form-group" id="nrc-no" style="display: none;">
                                <label class="form-label">Enter NRC number</label>
                                <div class="input-group">
                                    <input type="text" name="nrc_no" class="form-control" placeholder="NRC Number">
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary btn-pills waves-effect waves-themed" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary btn-pills waves-effect waves-themed">Create user</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>   
        </div>
    </div>
</div>  

