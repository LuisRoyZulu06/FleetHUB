<!-- Deactivate user -->
<div class="modal fade" id="deactivate_user"  tabindex="-1" role="dialog" aria-hidden="true" style="background-color: rgba(204, 204, 204, 0.8);">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="panel-content">
                <form action="<%= Routes.user_path(@conn, :deactivate_account)%>" method="POST">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <select class="custom-select form-control" name="acc_deactive_reason" required="required">
                                        <option>Select Reason of Deactivation</option>
                                        <option value="SUSPENDED">Suspend</option>
                                        <option value="DISMISSED">Dismissed</option>
                                        <option value="RETIRED">Retired</option>
                                    </select>
                                    <input type="hidden" name="id" id="id">
                                    <input type="hidden" name="account_status" value="0">
                                    <input type="hidden" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                                </div>
                            </div>

                            <h3 style="text-align: center;">
                                Are you sure you want to deactivate this account?
                                <br>
                            </h3> 
                        </div>
                    </div>

                    <div class="float-center" style="text-align: center;">
                        <button type="submit" class="btn btn-primary">Yes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    </div>  
                </form>
            </div>
            </div>
        </div>
    </div>
</div>

<!-- Activate user -->
<div class="modal fade" id="activate_user"  tabindex="-1" role="dialog" aria-hidden="true" style="background-color: rgba(204, 204, 204, 0.8);">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form class="form-horizontal" action="<%= Routes.user_path(@conn, :activate_user_account)%>" method="post">
                    <div class="row">
                        <div class="col-md-12">  
                            <div class="form-group"> 
                                <h3 style="text-align: center;">
                                    Are you sure you want to activate this account?
                                    <br><br>
                                </h3>                               
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="hidden" name="id" id="id">
                                        <input type="hidden" name="account_status" value="1">
                                        <input type="hidden" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                                    </div>
                                </div>
                            </div> 
                        </div>
                    </div>

                    <div class="float-center" style="text-align: center;">
                        <button type="submit" class="btn btn-primary">Yes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="<%= Routes.static_path(@conn, "/js/vendors.bundle.js") %>"></script> 
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.3.3/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<script>
    $('#idType').on('change', function() {
        //------- Creating user
        // Show and hide nrc and drivers license inputs
        // Alert( this.value ); // or $(this).val()
    if(this.value == "Drivers License") {
        $('#license-class').show();
        $('#nrc-no').hide();
    }

    if(this.value == "NRC") {
        $('#nrc-no').show();
        $('#license-class').hide();
    } 
    });


    $('#editIdType').on('change', function() {
        //------- Editing user
    if(this.value == "Drivers License") {
        $('#edit-license-class').show();
        $('#edit-nrc-no').hide();
    }

    if(this.value == "NRC") {
        $('#edit-nrc-no').show();
        $('#edit-license-class').hide();
    } 
    });


    $('#slct-user-rol').on('change', function() {
        // Show and Hide NRC and DRIVERS LICENSE INPUTS
        //  alert( this.value ); // or $(this).val()
      if(this.value == "BACKOFFICE") {
        $('#user_type').val("1");
      }
      else if(this.value == "DRIVER"){
        $('#user_type').val("2");
      }
      else{
        $('#user_type').val("3");
      }
    });
</script>

<script>
    $(document).ready(function(){
        //---------------Edit Profile
        $('#editUser').on('show.bs.modal', function (event){
            console.log("edit")
            var button = $(event.relatedTarget)
            var id = button.data('id')
            var first_name = button.data('first_name')
            var last_name = button.data('last_name')
            var sex = button.data('sex')
            var phone = button.data('phone')
            var email = button.data('email')
            var drvrs_license_no = button.data('drvrs_license_no')
            var drvrs_license_class = button.data('drvrs_license_class')
            var drvrs_license_exp_dt = button.data('drvrs_license_exp_dt')
            var user_type = button.data('user_type')
            var user_role = button.data('user_role')
            

            var modal = $(this)
            
            modal.find('.modal-body #id').val(id);
            modal.find('.modal-body #first_name').val(first_name);
            modal.find('.modal-body #last_name').val(last_name);
            modal.find('.modal-body #sex').val(sex);
            modal.find('.modal-body #phone').val(phone);
            modal.find('.modal-body #email').val(email);
            modal.find('.modal-body #drvrs_license_no').val(drvrs_license_no);
            modal.find('.modal-body #drvrs_license_class').val(drvrs_license_class);
            modal.find('.modal-body #drvrs_license_exp_dt').val(drvrs_license_exp_dt);
            modal.find('.modal-body #user_type').val(user_type);
            modal.find('.modal-body #user_role').val(user_role);
            
        });

        //---------------Profil Details

        //Deactivate Account
        $('#deactivate_user').on('show.bs.modal', function (event){
            var button = $(event.relatedTarget)
            var id = button.data('id')
            var status = button.data('status')
            
            var modal = $(this)
            modal.find('.modal-body #id').val(id);
            modal.find('.modal-body #status').val(status);
        })
        
        //Activate Account
        $('#activate_user').on('show.bs.modal', function (event){
            var button = $(event.relatedTarget)
            var id = button.data('id')
            
            var modal = $(this)
            modal.find('.modal-body #id').val(id);
        });

    });
</script>
